<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:daily="clr-namespace:Planner.Maui.Pages.Daily"
             x:Class="Planner.Maui.Pages.Daily.LocalDateLabel"
             x:Name="OuterControl">
    <daily:AdaptiveTextLayout Date="{Binding Date}"
        BindingContext="{x:Reference OuterControl}">
        <Label 
            FontSize="{Binding FontSize}"
            FontFamily="{Binding FontFamily}"
            Text="The date has not been set."/>
    </daily:AdaptiveTextLayout>
</ContentView>
